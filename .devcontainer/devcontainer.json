{
    "name": "Python 3.11 & PostgreSQL",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "forwardPorts": [8000, 5432],

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg"
            ]
        },
        "settings": {
            "sqltools.connections": [
                {
                    "name": "postgres db",
                    "driver": "PostgreSQL",
                    "previewLimit": 50,
                    "server": "localhost",
                    "port": 5432,
                    "database": "postgres",
                    "username": "postgres",
                    "askForPassword": true
                },
                {
                    "name": "Hydrofabric DB",
                    "driver": "PostgreSQL",
                    "previewLimit": 50,
                    "server": "localhost",
                    "port": 5432,
                    "database": "hydrofabric_db",
                    "username": "postgres",
                    "askForPassword": true
                }
            ],
            "python.pythonPath": "/usr/bin/python"
        }
    }
}
